{
  "scopeName": "source.embr",
  "name": "Embr",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#constants"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.embr",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.embr",
          "match": "\\b(if|else|return|class|var|while|fn|for|out)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.embr",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\s*(?=\\()"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.embr",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.embr",
          "match": "\\b\\d+\\b"
        },
        {
          "name": "constant.language.boolean.embr",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.embr",
          "match": "\\bnil\\b"
        }
      ]
    }
  }
}
